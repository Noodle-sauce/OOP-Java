import java.util.Scanner;

class Exercise2{
    public static void main(String[] args){
        Scanner reader = new Scanner(System.in);
        
        int sum = 0;
        int read;
        
        System.out.println("Please enter first number: ");
        read=reader.nextInt();
        sum+=read;
        
        System.out.println("Please enter second number: ");
        read=reader.nextInt();
        sum+=read;
        
        System.out.println("Please enter second number: ");
        read=reader.nextInt();
        sum+=read;
    }
}
