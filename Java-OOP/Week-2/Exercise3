import java.util.Scanner;

class Exercise3 {
    public static void main(String[] args) {
        
        Scanner reader = new Scanner(System.in);
        
        int sum = 0;
        while (true){
            int read = Scanner.nextInt();
            if(read == 0){
                break;
            }else{
                sum = sum + read;
                System.out.println("Sum now: " + sum);
            }
        }
        System.out.println("Sum in the end is " + sum);   
    }
}

